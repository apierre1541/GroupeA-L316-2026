{% extends "base.html.twig" %}

{% block title %}Connexion - Notre Entreprise{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4">Se connecter</h1>
                    
                    {% if error %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Erreur d'authentification!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" novalidate class="needs-validation">
                        <div class="form-group mb-3">
                            <label for="inputEmail" class="form-label fw-bold">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="votre.email@example.com" required autofocus>
                        </div>

                        <div class="form-group mb-4">
                            <label for="inputPassword" class="form-label fw-bold">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="••••••••" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Se connecter</button>
                    </form>

                    <p class="text-center text-muted">
                        Pas encore de compte? 
                        <a href="{{ path('app_register') }}" class="text-primary text-decoration-none fw-bold">S'inscrire ici</a>
                    </p>

                    <p class="text-center">
                        <a href="{{ path('app_home') }}" class="text-muted text-decoration-none">Retourner à l'accueil</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
