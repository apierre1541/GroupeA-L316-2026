{% extends 'base.html.twig' %}

{% block title %}{{ actualite.titre }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_actualite_index') }}">Actualités</a>
                </li>
                <li class="breadcrumb-item active">{{ actualite.titre|slice(0, 30) }}...</li>
            </ol>
        </nav>
        
        <article>
            <h1 class="mb-3">{{ actualite.titre }}</h1>
            
            <div class="text-muted mb-4">
                <i class="bi bi-calendar"></i> 
                Publié le {{ actualite.date|date('d/m/Y à H:i') }}
            </div>
            
            {% if actualite.image %}
                <img src="{{ asset('uploads/' ~ actualite.image) }}" 
                     class="img-fluid rounded mb-4" 
                     alt="{{ actualite.titre }}">
            {% endif %}
            
            <div class="actualite-content">
                {{ actualite.contenu|nl2br }}
            </div>
            
            <hr class="my-4">
            
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_actualite_index') }}" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Retour aux actualités
                </a>
                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> Accueil
                </a>
            </div>
        </article>
    </div>
{% endblock %}