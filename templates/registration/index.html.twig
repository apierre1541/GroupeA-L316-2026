{% extends "base.html.twig" %}

{% block title %}Inscription - Notre Entreprise{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4">Créer un compte</h1>
                    
                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    
                    <div class="form-group mb-3">
                        <label for="nom" class="form-label fw-bold">Nom</label>
                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        <label for="prenom" class="form-label fw-bold">Prénom</label>
                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        <label for="email" class="form-label fw-bold">Email</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre.email@example.com'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        <label for="telephone" class="form-label fw-bold">Téléphone</label>
                        {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': '+33 X XX XX XX XX'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        <label for="plainPassword" class="form-label fw-bold">Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Entrez un mot de passe sécurisé'}}) }}
                    </div>

                    <div class="form-check mb-4">
                        {{ form_widget(registrationForm.isCollaborateur, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label fw-bold" for="isCollaborateur">
                            Je suis collaborateur
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">S'inscrire</button>
                    
                    {{ form_end(registrationForm) }}
                    
                    <p class="text-center text-muted">
                        Retourner à l'<a href="{{ path('app_home') }}" class="text-primary text-decoration-none fw-bold">accueil</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
