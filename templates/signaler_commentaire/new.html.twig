{% extends 'base.html.twig' %}

{% block title %}New Commentaire{% endblock %}

{% block body %}
   <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <h1 class="text-center mb-4">Merci d'écrire la raison de votre signalement</h1>
                        
                        {{ form_start(commentaireSignalerForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        
                        <div class="form-group mb-3">
                            <label for="libelle" class="form-label fw-bold">Signaler Commentaire</label>
                            {{ form_widget(commentaireSignalerForm.libelle, {'attr': {'class': 'form-control', 'placeholder': 'Votre commentaire'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Envoyé votre signalement</button>
                        
                        {{ form_end(commentaireSignalerForm) }}
                        
                        <p class="text-center text-muted">
                            Retourner à l'<a href="{{ path('app_home') }}" class="text-primary text-decoration-none fw-bold">accueil</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
